import numpy as np
import tensorflow as tf
from tensorflow.keras.utils import to_categorical
from tensorflow.keras import models
from tensorflow.keras.layers import Dense, Dropout, Flatten, Conv2D, MaxPooling2D
from tensorflow.keras.datasets import cifar10
import random
import os

#2025/0207新增
seed_value = 1234
np.random.seed(seed_value)
random.seed(seed_value)
tf.random.set_seed(seed_value)
os.environ['PYTHONHASHSEED'] = str(seed_value)

# tf.keras.datasets.mnist.load_data()

(x_Train, y_Train), (x_Test, y_Test) = cifar10.load_data()
# (x_Train, y_Train), (x_Test, y_Test) = tf.keras.datasets.mnist.load_data()
x_Train, x_Test, = x_Train / 255.0, x_Test / 255.0          #做正規化，將原本範圍在 0~255 的像素值轉換到範圍 0~1 之間
y_Train = to_categorical(y_Train, 10)  # One-hot 編碼
y_Test = to_categorical(y_Test, 10)    # One-hot 編碼

#標準化standardization
mean = np.mean(x_Train, axis=(0,1,2))  # 對 height, width, channel 軸取均值
std = np.std(x_Train, axis=(0,1,2))    # 對 height, width, channel 軸取標準差
print(f"Mean: {mean}, Std: {std}")
x_Train = (x_Train - mean) / std
x_Test = (x_Test - mean) / std

model = models.Sequential()

model.add(Conv2D(6, kernel_size=5, strides=1, padding="same", activation="relu", input_shape=(32, 32, 3)))
model.add(MaxPooling2D(pool_size=2, strides=2))
model.add(Conv2D(16, kernel_size=5, strides=1, padding="same", activation="relu"))
model.add(MaxPooling2D(pool_size=2, strides=2))
model.add(Flatten())
model.add(Dense(120, activation="relu"))
model.add(Dense(84, activation="relu"))
model.add(Dense(10,activation="softmax"))
print(model.summary())

model.compile(loss='categorical_crossentropy', optimizer='adam', metrics=['accuracy'])

model.fit(x_Train, y_Train, epochs = 5)

model.evaluate(x_Train, y_Train, verbose=2)

probability_model = tf.keras.Sequential([
  model,
  tf.keras.layers.Softmax()
])

probability_model(x_Test[:5])    #測試集前5筆

test_loss, test_acc = model.evaluate(x_Test, y_Test, verbose=2)

import matplotlib.pyplot as plt
# 提取第一張影像和對應的標籤
first_image = x_Test[1]
first_label = y_Test[1]
plt.imshow(first_image, cmap='gray')  # 使用灰階顯示
plt.title(f"Label: {first_label}")    # 在標題中顯示標籤
plt.axis('off')                       # 關閉座標軸
plt.show()

# 預測測試集
y_pred = model.predict(x_Test)         #0~1之間的機率
y_pred_classes = np.argmax(y_pred, axis=1)  # 找出y_pred最大值所在的索引
y_true_classes = np.argmax(y_Test, axis=1)  # 找出測試集的真實的類別索引

# 找出預測錯誤的索引
errors = np.where(y_pred_classes != y_true_classes)[0]
print(f"Total errors: {len(errors)}")

# 顯示前 5 個預測錯誤的影像
num_to_display = 5
for i, idx in enumerate(errors[:num_to_display]):
    plt.figure(figsize=(4, 4))
    plt.imshow(x_Test[idx], cmap='gray')  # 顯示灰階影像
    plt.title(f"True: {y_true_classes[idx]}, Pred: {y_pred_classes[idx]}")
    plt.axis('off')
    plt.show()
